extends ../layout

block js
  script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js')
  script(src='/js/join-event-btn.js')

block content
  h1
    | Title:&nbsp;
    =event.title
  .col-sm-6
    p
      | Date:&nbsp;
      = event.date
    p
      | Town:&nbsp;
      = event.town
    p
      | Username:&nbsp;
      = event.username
    p
      | Description:&nbsp;
      = event.description

    button(class='join-event-btn btn btn-success', event-data=event.id) Join


  .col-sm-6
    img(src='#{event.image}' class='img-thumbnail')
  .row
    a.btn.btn-info.col-sm-3(class='button', href='/events/' + event.id +'/' + event.title + '/addComment') Add comment


  .container
    h1 Comments:
    .row
      hr
      ul
        each comment in comments
          .panel.panel-default
            .panel-heading Made by:
              strong
                a(href="/users/" + comment.userId)= comment.username
            .panel-body= comment.content
            hr
    h1 Users:
      .row
        hr
        ul
          each user in event.users
            .panel.panel-default
              .panel-heading User:
                strong
                  a(href="/users/" + user.userId)= user.username
              hr
