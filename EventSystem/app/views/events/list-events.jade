extends ../layout

block js
  script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js')
  script(src='/js/join-event-btn.js')

block content
  div(style='margin-top: 60px')
    #container
      if events != 0
        each event in events
          div(class='col-md-8 col-md-offset-2')
            h3(class='jumbotron text-center')= event.title
            p Description:&nbsp;
              = event.description
            h5 Town:&nbsp;
              = event.town
            h5 Date:&nbsp;
              = event.date
            h5 User:&nbsp;
              = event.username
            if user != undefined
              .row
                a.btn.btn-info.col-sm-3(class='button', href='/events/' + event._id) Details
                button(class='join-event-btn btn btn-success col-sm-3 pull-right', event-data=event.id) Join

          .col-md-8.col-md-offset-2
            hr
      else
        h1 No events found!
