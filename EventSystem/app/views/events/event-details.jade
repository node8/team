extends ../layout

block js
  script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js')
  script(src='/js/join-event-btn.js')

block content
  .col-sm-6
    h1
      | Title:&nbsp;
      =event.title
    p
        | Date:&nbsp;
        = event.date
    p
      | Town:&nbsp;
      = event.town
    p
      | Username:&nbsp;
      = event.username
    p
      | Description:&nbsp;
      = event.description

    .row
      button(class='join-event-btn btn btn-success col-sm-3', event-data=event.id) Join


  .col-sm-6
    img(src='#{event.image}' class='img-thumbnail')

  .container
    h1 Comments:
    .row
      hr
      ul
        each comment in comments
          .panel.panel-default
            .panel-heading Made by:
              strong
                a(href="/users/" + comment.userId)= comment.username
            .panel-body= comment.content
            hr
    .col-sm-6.col-md-6.col-lg-6
      .row
        a.btn.btn-info.col-sm-3(class='button', href='/events/' + event.id + '/addComment') Add comment
        hr
      .row
        ul
          each comment in comments
            li.text-left
              strong= comment.username
              span
                | :&nbsp;
              span= comment.content
              hr
    .col-sm-6.col-md-6.col-lg-6
      .row
        each user in event.users
          li.text-left
            span= user.username
          hr
